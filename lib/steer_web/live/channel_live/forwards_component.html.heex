<div class="text-xl mb-2 text-gray-300 text-opacity-80">
    <%= Enum.count(@forwards) %> forwards
</div>

<div class="grid grid-cols-3 p-1 mb-1 max-w-screen-sm text-gray-400 rounded-xl bg-gray-800">
    <div class="border-black border-b-4 border-opacity-30"></div>
    <div class="font-bold text-xl  text-gray-400 border-black border-b-4 border-opacity-30 text-right">amount</div>
    <div class="font-bold text-xl  text-gray-400 border-black border-b-4 border-opacity-30 text-right">fee</div>
    <%= for forward <- @forwards do %>
        <div class="text-base"><%= Timex.from_now(forward.time) %></div>
        <div class="font-bold text-right text-base"><%= forward.formatted_amount_in %></div>
        <div class="font-bold text-right text-base"><%= forward.formatted_fee %></div>
        <div class="col-span-3">
            <span class="text-sm"><%= forward.direction %></span>
            <%= live_patch to: Routes.channel_show_path(@socket, :show, forward.remote_channel_id) do %>
                <span class="text-xl"><%= forward.remote_alias %></span>
            <% end %>
        </div>
        <div class="col-span-3 border-gray-400 border-opacity-30 border-b"></div>
    <% end %>
</div>
